<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace: 이 XML이 어떤 자바 인터페이스와 짝꿍인지 알려줌 -->
<mapper namespace="com.example.TEAM202507_01.menus.hospital.repository.HospitalMapper">

    <!-- findAll: 전체 조회 -->
    <select id="findAll" resultType="HospitalDto">
        SELECT * FROM HOSPITALS
        ORDER BY ID DESC <!-- 최신 등록된 병원이 위로 오게 정렬 -->
    </select>
    <!-- findById: 상세 조회 -->
    <select id="findById" resultType="HospitalDto">
        SELECT * FROM HOSPITALS
        WHERE ID = #{id}  <!-- 파라미터로 받은 id와 일치하는 것 찾기 -->

    </select>
    <!-- findInfo: 지도용 정보 조회 -->
    <select id="findInfo" resultType="HospitalMapDto">
        SELECT
               ID,
               NAME,
               TREAT_CATEGORY,
               ADDRESS,
               TEL
        FROM HOSPITALS
        ORDER BY ID DESC
    </select>
    <!-- save: 저장 -->
    <!-- useGeneratedKeys="true": DB가 자동으로 만든 ID(Auto Increment)를 가져오겠다는 뜻 -->
    <!-- keyProperty="id": 가져온 ID를 DTO의 'id' 변수에 넣어라 -->
    <insert id="save" parameterType="HospitalDto" useGeneratedKeys="true" keyProperty="id" keyColumn="ID">
        INSERT INTO HOSPITALS (
            NAME,
            TREAT_CATEGORY,
            ADDRESS,
            TEL,
            EDIT_DATE
        ) VALUES (
                     #{name},
                     #{category},
                     #{address},
                     #{tel},
                     SYSDATE
                 )
    </insert>
    <!-- update: 수정 -->
    <update id="update" parameterType="HospitalDto">
        UPDATE HOSPITALS
        SET
            NAME = #{name},
            CATEGORY = #{category},
            ADDRESS = #{address},
            TEL = #{tel},
            IS_OPEN = #{isOpen}, <!-- DTO엔 없는데 XML엔 있네? 확인 필요 -->
            UPDATED_AT = SYSDATE
        WHERE ID = #{id}
    </update>
    <!-- delete: 삭제 -->
    <delete id="delete" parameterType="Long">
        DELETE FROM HOSPITALS
        WHERE ID = #{id}
    </delete>

</mapper>