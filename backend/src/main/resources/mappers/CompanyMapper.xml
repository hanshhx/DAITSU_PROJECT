<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.TEAM202507_01.menus.job.repository.CompanyMapper">

    <select id="findByName" resultType="com.example.TEAM202507_01.menus.job.entity.Company">
        SELECT * FROM COMPANYS WHERE NAME = #{name}
    </select>

    <insert id="save" parameterType="com.example.TEAM202507_01.menus.job.entity.Company"
            useGeneratedKeys="true" keyColumn="ID" keyProperty="id">
        INSERT INTO COMPANYS (
            TYPE,
            NAME,
            ADDRESS,
            PHONE
        ) VALUES (
                     #{type},
                     #{name},
                     #{address},
                     #{phone}
                 )
    </insert>

</mapper>